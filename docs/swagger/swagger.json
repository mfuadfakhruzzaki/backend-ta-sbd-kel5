    "definitions": {
        "domain.ItemCategory": {
            "type": "string",
            "enum": [
                "Buku",
                "Elektronik",
                "Perabotan",
                "Kos-kosan",
                "Lainnya"
            ],
            "x-enum-varnames": [
                "CategoryBuku",
                "CategoryElektronik",
                "CategoryPerabotan",
                "CategoryKosKosan",
                "CategoryLainnya"
            ]
        },
        "domain.ItemResponse": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "deskripsi": {
                    "type": "string"
                },
                "gambar": {
                    "type": "string"
                },
                "harga": {
                    "type": "number"
                },
                "id": {
                    "type": "integer"
                },
                "kategori": {
                    "$ref": "#/definitions/domain.ItemCategory"
                },
                "nama_barang": {
                    "type": "string"
                },
                "penjual": {
                    "$ref": "#/definitions/domain.UserResponse"
                },
                "penjual_id": {
                    "type": "integer"
                },
                "status": {
                    "$ref": "#/definitions/domain.ItemStatus"
                }
            }
        },
        "domain.ItemStatus": {
            "type": "string",
            "enum": [
                "Tersedia",
                "Terjual",
                "Dihapus"
            ],
            "x-enum-varnames": [
                "StatusTersedia",
                "StatusTerjual",
                "StatusDihapus"
            ]
        },
        "domain.LoginRequest": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "john@example.com"
                },
                "password": {
                    "type": "string",
                    "example": "password123"
                }
            }
        },
        "domain.LoginResponse": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                },
                "user": {
                    "$ref": "#/definitions/domain.UserPublic"
                }
            }
        },
        "domain.RegisterRequest": {
            "type": "object",
            "properties": {
                "alamat": {
                    "type": "string",
                    "example": "Jl. Contoh No. 123"
                },
                "email": {
                    "type": "string",
                    "example": "john@example.com"
                },
                "nama": {
                    "type": "string",
                    "example": "John Doe"
                },
                "no_hp": {
                    "type": "string",
                    "example": "08123456789"
                },
                "password": {
                    "type": "string",
                    "example": "password123"
                }
            }
        },
        "domain.RegisterResponse": {
            "type": "object",
            "properties": {
                "user_id": {
                    "type": "integer",
                    "example": 1
                }
            }
        },
        "domain.Role": {
            "type": "string",
            "enum": [
                "user",
                "admin"
            ],
            "x-enum-varnames": [
                "RoleUser",
                "RoleAdmin"
            ]
        },
        "domain.UpdateItemRequest": {
            "type": "object",
            "properties": {
                "deskripsi": {
                    "type": "string",
                    "example": "Laptop dalam kondisi baik, baru dipakai 6 bulan"
                },
                "harga": {
                    "type": "number",
                    "example": 9500000
                },
                "kategori": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/domain.ItemCategory"
                        }
                    ],
                    "example": "Elektronik"
                },
                "nama_barang": {
                    "type": "string",
                    "example": "Laptop Macbook Pro 2019 M1"
                }
            }
        },
        "domain.UploadImageResponse": {
            "type": "object",
            "properties": {
                "file_id": {
                    "type": "string",
                    "example": "item_1_1620000000"
                },
                "file_name": {
                    "type": "string",
                    "example": "item_1_1620000000.jpg"
                },
                "view_url": {
                    "type": "string",
                    "example": "http://endpoint.com/storage/buckets/bucket-id/files/file-id/download?project=project-id"
                }
            }
        },
        "domain.UserPublic": {
            "type": "object",
            "properties": {
                "alamat": {
                    "type": "string",
                    "example": "Jl. Contoh No. 123"
                },
                "email": {
                    "type": "string",
                    "example": "john@example.com"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "is_active": {
                    "type": "boolean",
                    "example": true
                },
                "nama": {
                    "type": "string",
                    "example": "John Doe"
                },
                "no_hp": {
                    "type": "string",
                    "example": "08123456789"
                },
                "role": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/domain.Role"
                        }
                    ],
                    "example": "user"
                }
            }
        },
        "domain.UserResponse": {
            "type": "object",
            "properties": {
                "alamat": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "nama": {
                    "type": "string"
                },
                "no_hp": {
                    "type": "string"
                },
                "role": {
                    "$ref": "#/definitions/domain.Role"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "utils.Meta": {
            "type": "object",
            "properties": {
                "limit": {
                    "type": "integer"
                },
                "page": {
                    "type": "integer"
                },
                "total_items": {
                    "type": "integer"
                },
                "total_pages": {
                    "type": "integer"
                }
            }
        },
        "utils.PaginatedResponse": {
            "type": "object",
            "properties": {
                "data": {},
                "message": {
                    "type": "string"
                },
                "meta": {
                    "$ref": "#/definitions/utils.Meta"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "utils.StandardResponse": {
            "type": "object",
            "properties": {
                "data": {},
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Type \"Bearer\" followed by a space and JWT token.",
